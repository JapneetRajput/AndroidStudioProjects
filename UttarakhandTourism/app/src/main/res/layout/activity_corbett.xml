                android:text="1) Trekking"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1170dp"
                android:text="Jolly Grant is the nearest airport to Kedarnath situated at a distance of 238 kilometers. Jolly Grant Airport is well connected to Delhi with daily flights. Gaurikund is well connected by motorable roads with Jolly Grant Airport. Taxis are easily available from Jolly Grant Airport to Gaurikund."
                app:layout_constraintVertical_bias="0"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1300dp"
                android:text="The nearest railway station to Kedarnath is Rishikesh. Rishikesh railway station is situated 216 kilometers before Kedarnath on NH58. Rishikesh is well connected by railway networks with major destinations of India. Trains to Rishikesh are frequent. Gaurikund is well connected by motorable roads with Rishikesh. Taxis and buses are easily available from Rishikesh to Gaurikund."
                app:layout_constraintVertical_bias="0"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
